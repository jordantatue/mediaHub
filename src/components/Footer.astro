---
import { SITE_CONFIG } from '../config';

const currentYear = new Date().getFullYear();
---

<footer class="bg-dark text-white mt-5">
  <div class="container py-5">
    <div class="row g-4 mb-4">
      <div class="col-12 col-md-4">
        <h3 class="h5 text-primary">{SITE_CONFIG.title}</h3>
        <p class="mb-0">{SITE_CONFIG.description}</p>
      </div>

      <div class="col-12 col-md-4">
        <h4 class="h6 fw-semibold text-white">Navigation</h4>
        <ul class="list-unstyled mb-0 d-grid gap-2">
          {SITE_CONFIG.navigation.map((item) => (
            <li>
              <a class="text-white text-decoration-none" href={item.href}>
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="col-12 col-md-4">
        <h4 class="h6 fw-semibold text-white">Suivez-nous</h4>
        <ul class="list-unstyled mb-0 d-grid gap-2">
          <li><a class="text-white text-decoration-none" href={SITE_CONFIG.social.twitter} target="_blank" rel="noopener">Twitter</a></li>
          <li><a class="text-white text-decoration-none" href={SITE_CONFIG.social.linkedin} target="_blank" rel="noopener">LinkedIn</a></li>
          <li><a class="text-white text-decoration-none" href={SITE_CONFIG.social.github} target="_blank" rel="noopener">GitHub</a></li>
        </ul>
      </div>
    </div>

    <div class="border-top border-light border-opacity-25 pt-3 text-center small">
      &copy; {currentYear} {SITE_CONFIG.title}. Tous droits réservés.
    </div>
  </div>
</footer>
